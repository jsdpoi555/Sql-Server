SELECT * FROM
(SELECT *
  FROM [通用].[dbo].[客户财务信息表]
  where 客户类型='合作客户' and 集团='国电投') as A
left join [通用].[dbo].[录款信息]
on A.[会员号] = [通用].[dbo].[录款信息].[客户编号]


SELECT * FROM
(SELECT *
  FROM [通用].[dbo].[客户财务信息表]
  where 客户类型='合作客户' and 集团='国电投') as A
left join [账务明细].[dbo].[账务明细全]
on A.[会员号] = [账务明细].[dbo].[账务明细全].[客户编号金蝶]
